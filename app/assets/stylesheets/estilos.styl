@import 'nib'
@import 'nib/gradients'

gris = #999
grisOscuro = #666
naranjo = #FFAA00
verdeClaro = #95C11F
verdeOscuro = #3AAA35
foo = margin-left 1em
plomo = #7c7c7c


body
	background #EEE
	font-family 'Open Sans', sans-serif
	font-size 18px

	a
		color grisOscuro
	h1
	h2
	h3
	h4
		color grisOscuro
		font-weight 300
		text-align center
	p
		color grisOscuro
		font-weight 300
		text-align center
		font-size .8em
	footer
		background plomo
		color gris
		padding 2em 0
		text-align center
		width 100%
	header
		background white
		overflow hidden
		position relative
		width 100%
		.contHeader
			display block
			margin 0 auto
			width 80%
			.avatar
				cursor pointer
				float right
				figure
					background white
					float left
					padding .5em 0
					position relative
					img
						border-radius 50%
						margin 0
						width 50px
				.nombre
					float left
					margin-left 1em
					position relative
					top 1em
					span
						color grisOscuro
			.logo
				float left
				figure
					padding .5em 0
					img
						margin 0
						filter grayscale(1)
						transition .5s
						-webkit-filter grayscale(1)
						-moz-filter grayscale(1)
						width 150px
						&:hover
							filter grayscale(0)
							-webkit-filter grayscale(0)
							-moz-filter grayscale(0)
			.tools
				border-radius .5em
				display none
				float right
				margin-top 1em
				position relative
				text-align center
				a
					font-size .7em
					margin 1em 0
					padding 1em .5em
					text-align center
	nav
		display block
		font-size .7em
		font-weight 700
		margin 0 auto
		position relative
		width 80%
		ul
			border-bottom 3px solid transparent
			margin 0 auto
			padding 0
			a
				color inherit
				margin 0 1em
				text-decoration none
				padding 1em 0
				&:hover
					li
						border-bottom 3px solid verdeClaro
				li
					border-bottom 3px solid transparent
					color plomo
					display inline-block
					font-family 'Varela', sans-serif
					font-weight 300
					padding .5em 0
					text-align center
					text-transform uppercase
	section
		display block
		margin 2em auto
		position relative
		width 80%
		.listaCom
			margin 0
			padding 0
			li
				display inline-block
				list-style none
				margin 1em 0
				position relative
				width 48%
				&:nth-child(even)
					margin-left 1em
				figure
					z-index 2
					.comunidad
						background linear-gradient(to left, #A2B885 50%, #91A478 50%)
						border-radius 50%
						height 200px
						position relative
						width 200px
						z-index 2
						img
							width 100%
					.comuNombre
						background #D4E4AE
						border-radius .5em
						right 0
						height 150px
						position absolute
						top 25px
						width 90%
						z-index 1
						a
							color white
							float right
							font-size 1.3em
							font-style italic
							font-weight 700
							margin .7em 16px 0 0
							text-align right
							width 100%
						p
							color grisOscuro
							margin 0 16px 0 0
							text-align right
		.listaPan
			margin 0
			padding 0
			li
				display inline-block
				list-style none
				margin 1em 0
				position relative
				width 48%
				&:nth-child(even)
					margin-left 1em
				figure
					z-index 2
					.panImg
						background linear-gradient(to left, #A2B885 50%, #91A478 50%)
						border-radius 50%
						height 75px
						position relative
						width 75px
						z-index 2
						img
							width 100%
					.panNombre
						background #D4E4AE
						border-radius .5em
						right 0
						height 75px
						position absolute
						top 0
						width 90%
						z-index 1
						a
							color white
							float right
							font-size 1.3em
							font-style italic
							font-weight 700
							margin .7em 16px 0 0
							text-align right
							width 100%
	.progressbar
		background #A2B885
		border-radius .5em
		display block
		margin 1em auto
		width 40%
		.ui-progressbar-value
			background #91A478
			border-right 1px solid plomo

@media (max-width: 1200px)
	body
		section
			.listaCom
				li
					figure
						.comunidad
							height 150px
							width 150px
@media (max-width: 800px)
	body
		section
			.listaCom
				li
					display block
					margin 2em auto
					width 80%
					&:nth-child(even)
						margin-left auto
@media (max-width: 520px)
	body
		header
			.contHeader
				.avatar
				.logo
					display block
					float none
					margin 0 auto
					width 100%
				.avatar
					display block
					margin 0 auto
					position relative
					text-align center
					overflow hidden
					figure
					.nombre
						display inline-block
						vertical-align middle
					figure
						float none
						img
							width 40px
					.nombre
						float none
						top 0
				.logo
					figure
						display block
						padding .5em 0
						text-align center
				.tools
					background white
					margin 0
					padding 1em 0
					text-align center
					width 100%
					z-index 10
		section
			.listaCom
				li
					width 100%
		.progressbar
			width 80%
@media (max-width: 410px)
	body
		section
			.listaCom
				padding 0
				margin 0
				li
					padding 0
					margin 0
					figure
						height inherit
						.comunidad
							display block
							margin 0 auto
						.comuNombre
							position relative
							top -4em
							width 100%
							a
								margin 3.5em auto 0 auto
								text-align center
							p
								text-align center
								margin 0
								
