	<h2>Panel de Administrador</h2>
	<div id="progressbar" class="progressbar"></div>
	<p>Has ocupado un 37% de las licencias. Haz clic <a href="#">aquí</a> para obtener más.</p>
	
	<section>
		<ul class="listaCom">
			<% @comunidades.each do |comunidades|%>
				<%solicitudes = Solicitud.where("comunidad_id = '#{comunidades.id}' and  (estado_id = '1' or role_id = '1' or estado_id = '4' or estado_id = '3')").count%>
				<li>
					<figure>
						<div class="comunidad">
							<%= link_to image_tag("comunidadgris.svg"), admin_panel_path(:controller => 'admin', :action => 'sector', :comunidad_id => "#{comunidades.id}") %>
						</div>
						<figcaption class="comuNombre">
							<%= link_to "#{comunidades.nombre}", admin_panel_path(:controller => 'admin', :action => 'sector', :comunidad_id => "#{comunidades.id}") %>
							<p class="mensajes">Tienes 6 mensajes</p>
							<p class="asuntos"><%="#{solicitudes}"%> asuntos pendientes</p>
						</figcaption>
					</figure>
				</li>
			<%end%>
		</ul>
	</section>

